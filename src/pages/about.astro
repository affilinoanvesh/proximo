---
import Layout from '../layouts/Layout.astro';

// About page structured data
const aboutStructuredData = {
  "@context": "https://schema.org",
  "@type": "AboutPage",
  "mainEntity": {
    "@type": "Organization",
    "name": "Proximo Digital",
    "url": "https://proximodigital.com",
    "logo": "https://proximodigital.com/images/cropped-Black-White-Minimalist-Business-Logo.png",
    "description": "Leading digital agency specializing in comprehensive online solutions for businesses of all sizes across various industries.",
    "foundingDate": "2020",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "30 N Gould St Ste R",
      "addressLocality": "Sheridan",
      "addressRegion": "WY",
      "postalCode": "82801",
      "addressCountry": "US"
    },
    "contactPoint": {
      "@type": "ContactPoint",
      "telephone": "+1-989-999-7452",
      "contactType": "customer service",
      "email": "Info@proximodigital.com"
    },
    "areaServed": "Worldwide",
    "knowsAbout": ["Website Development", "Mobile App Development", "SEO", "SEM", "Digital Marketing"],
    "employee": [
      {
        "@type": "Person",
        "name": "Hanna",
        "jobTitle": "Senior Account Manager"
      }
    ]
  }
};
---

<Layout 
  title="About Proximo Digital | Leading Digital Agency & Web Development Company"
  description="Learn about Proximo Digital, a trusted digital agency serving businesses worldwide. We specialize in website development, mobile apps, SEO, and digital marketing with proven results."
  keywords="about Proximo Digital, digital agency company, web development company, digital marketing agency, SEO company, mobile app development company, Wyoming digital agency"
  ogType="website"
  structuredData={aboutStructuredData}
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-blue-600 to-purple-700 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">About Proximo Digital</h1>
      <p class="text-xl max-w-2xl mx-auto">
        Your trusted partner in digital transformation and growth
      </p>
    </div>
  </section>

  <!-- About Content -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center mb-16">
        <div>
          <h2 class="text-3xl font-bold mb-6">Who We Are</h2>
          <p class="text-gray-600 mb-4">
            Proximo Digital is a leading digital agency specializing in comprehensive online solutions for businesses of all sizes. From established SMEs and eCommerce brands to enterprises looking to increase market share, we've helped achieve it all.
          </p>
          <p class="text-gray-600 mb-4">
            We're trusted by worldwide companies across industries including retail, finance, IT, government, SaaS, technology, real estate, aged care, hospitality and more.
          </p>
          <p class="text-gray-600">
            Our team combines creativity, technical expertise, and strategic thinking to deliver results that matter to your business.
          </p>
        </div>
        <div>
          <img src="/images/cropped-Black-White-Minimalist-Business-Logo.png" alt="About Proximo Digital" class="w-full h-auto max-w-md mx-auto">
        </div>
      </div>

      <!-- Our Mission -->
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold mb-6">Our Mission</h2>
        <p class="text-lg text-gray-600 max-w-4xl mx-auto">
          To empower businesses with innovative digital solutions that drive growth, enhance user experiences, and create lasting value in an ever-evolving digital landscape.
        </p>
      </div>

      <!-- Our Values -->
      <div class="mb-16">
        <h2 class="text-3xl font-bold text-center mb-12">Our Values</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="bg-blue-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-3">Excellence</h3>
            <p class="text-gray-600">We strive for excellence in every project, delivering high-quality solutions that exceed expectations.</p>
          </div>
          <div class="text-center">
            <div class="bg-purple-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-3">Collaboration</h3>
            <p class="text-gray-600">We work closely with our clients as partners, ensuring transparent communication and shared success.</p>
          </div>
          <div class="text-center">
            <div class="bg-green-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-3">Innovation</h3>
            <p class="text-gray-600">We embrace cutting-edge technologies and creative approaches to solve complex business challenges.</p>
          </div>
        </div>
      </div>

      <!-- Why Choose Us -->
      <div class="bg-gray-50 rounded-lg p-8">
        <h2 class="text-3xl font-bold text-center mb-8">Why Choose Proximo Digital?</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="flex items-start">
            <div class="flex-shrink-0 mr-4">
              <div class="bg-blue-600 rounded-full w-8 h-8 flex items-center justify-center">
                <span class="text-white font-bold">1</span>
              </div>
            </div>
            <div>
              <h3 class="text-lg font-semibold mb-2">Proven Track Record</h3>
              <p class="text-gray-600">Years of experience helping businesses across various industries achieve their digital goals.</p>
            </div>
          </div>
          <div class="flex items-start">
            <div class="flex-shrink-0 mr-4">
              <div class="bg-blue-600 rounded-full w-8 h-8 flex items-center justify-center">
                <span class="text-white font-bold">2</span>
              </div>
            </div>
            <div>
              <h3 class="text-lg font-semibold mb-2">Comprehensive Services</h3>
              <p class="text-gray-600">From web development to digital marketing, we offer end-to-end solutions under one roof.</p>
            </div>
          </div>
          <div class="flex items-start">
            <div class="flex-shrink-0 mr-4">
              <div class="bg-blue-600 rounded-full w-8 h-8 flex items-center justify-center">
                <span class="text-white font-bold">3</span>
              </div>
            </div>
            <div>
              <h3 class="text-lg font-semibold mb-2">Expert Team</h3>
              <p class="text-gray-600">Our skilled professionals stay updated with the latest trends and technologies.</p>
            </div>
          </div>
          <div class="flex items-start">
            <div class="flex-shrink-0 mr-4">
              <div class="bg-blue-600 rounded-full w-8 h-8 flex items-center justify-center">
                <span class="text-white font-bold">4</span>
              </div>
            </div>
            <div>
              <h3 class="text-lg font-semibold mb-2">Results-Driven</h3>
              <p class="text-gray-600">We focus on measurable outcomes that contribute to your business growth and success.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-blue-600 text-white text-center">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl md:text-4xl font-bold mb-8">Ready to Work Together?</h2>
      <p class="text-xl mb-8">Let's discuss how we can help your business grow</p>
      <a href="/contact" class="inline-block bg-white text-blue-600 px-8 py-3 rounded-lg text-lg font-semibold hover:bg-gray-100 transition-colors">
        Get In Touch
      </a>
    </div>
  </section>
</Layout>
