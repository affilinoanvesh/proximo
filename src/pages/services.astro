---
import Layout from '../layouts/Layout.astro';

// Services page structured data
const servicesStructuredData = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Service",
      "name": "Website Development",
      "provider": {
        "@type": "Organization",
        "name": "Proximo Digital",
        "url": "https://proximodigital.com"
      },
      "description": "Professional website development services with responsive design, modern UI/UX, SEO optimization, and fast loading speeds.",
      "offers": {
        "@type": "Offer",
        "availability": "https://schema.org/InStock"
      }
    },
    {
      "@type": "Service",
      "name": "Mobile App Development",
      "provider": {
        "@type": "Organization",
        "name": "Proximo Digital",
        "url": "https://proximodigital.com"
      },
      "description": "Custom mobile application development for iOS and Android with user-friendly interfaces and app store optimization.",
      "offers": {
        "@type": "Offer",
        "availability": "https://schema.org/InStock"
      }
    },
    {
      "@type": "Service",
      "name": "SEO Services",
      "provider": {
        "@type": "Organization",
        "name": "Proximo Digital",
        "url": "https://proximodigital.com"
      },
      "description": "Comprehensive SEO services including keyword research, on-page optimization, link building, and performance tracking.",
      "offers": {
        "@type": "Offer",
        "availability": "https://schema.org/InStock"
      }
    },
    {
      "@type": "Service",
      "name": "SEM Services",
      "provider": {
        "@type": "Organization",
        "name": "Proximo Digital",
        "url": "https://proximodigital.com"
      },
      "description": "Search Engine Marketing services including Google Ads management, campaign optimization, ROI tracking, and competitive analysis.",
      "offers": {
        "@type": "Offer",
        "availability": "https://schema.org/InStock"
      }
    }
  ]
};
---

<Layout 
  title="Digital Marketing Services | Website Development, SEO, SEM & Mobile Apps - Proximo Digital"
  description="Comprehensive digital marketing services including website development, mobile app development, SEO, and SEM. Transform your business with our expert digital solutions and proven strategies."
  keywords="digital marketing services, website development services, mobile app development, SEO services, SEM services, Google Ads management, search engine optimization, digital agency services"
  ogType="website"
  structuredData={servicesStructuredData}
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-blue-600 to-purple-700 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Our Services</h1>
      <p class="text-xl max-w-2xl mx-auto">
        Comprehensive digital solutions to grow your business
      </p>
    </div>
  </section>

  <!-- Services Detail Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mb-16">
        <!-- Website Development -->
        <div class="flex flex-col md:flex-row gap-6">
          <div class="md:w-1/2">
            <img src="/images/5172479.jpg" alt="Website Development" class="w-full h-64 object-cover rounded-lg">
          </div>
          <div class="md:w-1/2">
            <h2 class="text-2xl font-bold mb-4">Website Development</h2>
            <p class="text-gray-600 mb-4">
              We specialize in developing websites that make your business stand out from the competition. We build eye-popping websites that are easy to use and have all the right features, helping you prosper online.
            </p>
            <ul class="text-gray-600 space-y-2">
              <li>• Responsive Design</li>
              <li>• Modern UI/UX</li>
              <li>• SEO Optimized</li>
              <li>• Fast Loading</li>
            </ul>
          </div>
        </div>

        <!-- Mobile App Development -->
        <div class="flex flex-col md:flex-row gap-6">
          <div class="md:w-1/2">
            <img src="/images/contextualad_2-scaled-e1672917024933-1024x785.jpg" alt="Mobile App Development" class="w-full h-64 object-cover rounded-lg">
          </div>
          <div class="md:w-1/2">
            <h2 class="text-2xl font-bold mb-4">Mobile App Development</h2>
            <p class="text-gray-600 mb-4">
              With our mobile app development solution, you can create a custom mobile application by just telling what you desire we will team will develop it.
            </p>
            <ul class="text-gray-600 space-y-2">
              <li>• iOS & Android</li>
              <li>• Custom Solutions</li>
              <li>• User-Friendly Interface</li>
              <li>• App Store Optimization</li>
            </ul>
          </div>
        </div>

        <!-- SEO -->
        <div class="flex flex-col md:flex-row gap-6">
          <div class="md:w-1/2">
            <img src="/images/12491662_4950546-1024x1024.jpg" alt="SEO Services" class="w-full h-64 object-cover rounded-lg">
          </div>
          <div class="md:w-1/2">
            <h2 class="text-2xl font-bold mb-4">SEO</h2>
            <p class="text-gray-600 mb-4">
              We believe effective SEO involves providing a positive user experience. Our SEO services aim to raise your website's ranking in search engines while also strengthening the relationship between users and your brand.
            </p>
            <ul class="text-gray-600 space-y-2">
              <li>• Keyword Research</li>
              <li>• On-Page Optimization</li>
              <li>• Link Building</li>
              <li>• Performance Tracking</li>
            </ul>
          </div>
        </div>

        <!-- SEM -->
        <div class="flex flex-col md:flex-row gap-6">
          <div class="md:w-1/2">
            <img src="/images/10802152_4530890-1024x683.jpg" alt="SEM Services" class="w-full h-64 object-cover rounded-lg">
          </div>
          <div class="md:w-1/2">
            <h2 class="text-2xl font-bold mb-4">SEM</h2>
            <p class="text-gray-600 mb-4">
              We help you get more customers, faster. We've got excellent SEM expertise, backed by vast experience in the industry. That means we know exactly what your customers are looking for.
            </p>
            <ul class="text-gray-600 space-y-2">
              <li>• Google Ads Management</li>
              <li>• Campaign Optimization</li>
              <li>• ROI Tracking</li>
              <li>• Competitive Analysis</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-blue-600 text-white text-center">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl md:text-4xl font-bold mb-8">Ready to Get Started?</h2>
      <a href="/contact" class="inline-block bg-white text-blue-600 px-8 py-3 rounded-lg text-lg font-semibold hover:bg-gray-100 transition-colors">
        Contact Us Today
      </a>
    </div>
  </section>
</Layout>
